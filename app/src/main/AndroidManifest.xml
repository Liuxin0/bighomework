<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a1111.term4_homework">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".student.StudentMainActivity"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.NoActionBar.full">

            <!-- <meta-data -->
            <!-- android:name="android.support.PARENT_ACTIVITY" -->
            <!-- android:value="com.example.a1111.term4_homework.student.StudentMainActivityctivity" /> -->
        </activity>

        <activity
            android:name=".teacher.TeacherMainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar.full">
        </activity>

        <activity
            android:name=".student.first.FirstItemDetailActivity"
            android:label="@string/title_firstitem_detail"
            android:parentActivityName=".student.StudentMainActivity"
            android:theme="@style/AppTheme.NoActionBar.full">

            <!-- <meta-data -->
            <!-- android:name="android.support.PARENT_ACTIVITY" -->
            <!-- android:value="com.example.a1111.term4_homework.student.StudentMainActivityctivity" /> -->
        </activity>
        <activity
            android:name=".student.second.SecondItemDetailActivity"
            android:label="@string/title_seconditem_detail"
            android:parentActivityName=".student.StudentMainActivity"
            android:theme="@style/AppTheme.NoActionBar.full">

            <!-- <meta-data -->
            <!-- android:name="android.support.PARENT_ACTIVITY" -->
            <!-- android:value="com.example.a1111.term4_homework.student.StudentMainActivityctivity" /> -->
        </activity>
        <activity
            android:name=".teacher.first.FirstItemDetailActivity"
            android:label="@string/title_firstitem_detail"
            android:theme="@style/AppTheme.NoActionBar.full"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar.full">

        </activity>

        <activity android:name=".teacher.second.SecondActivity"
            android:theme="@style/AppTheme.NoActionBar.full"/>
    </application>

</manifest>